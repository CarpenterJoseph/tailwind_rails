<flex-row-evenly>
  <fl-button>
    Hello
  </fl-button>
  <fl-button>
    Buddy
  </fl-button>
  <fl-button>
    How
  </fl-button>
  <fl-button>
    Are You
  </fl-button>
</flex-row-evenly>

<h3 class="text-2xl mt-8">Users</h3>

<% @users.each do |user| %>
  <p><%= user.username %></p>
<% end %>

<%= form_with url: "/", method: :post, builder: ApplicationForm do |form| %>
  <%= form.header 'Create User' %>
  <%= form.label 'Username' %>
  <%= form.text_field :username %>
  <%= form.label 'Password' %>
  <%= form.password_field :password %>
  <%= form.submit 'Submit' %>
<% end %>
